<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_harvest" model="ir.module.category">
        <field name="name">Harvest Time Tracking</field>
        <field name="description">Manage Harvest time tracking integration</field>
        <field name="sequence">20</field>
    </record>
    
    <record id="group_harvest_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_harvest"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_harvest_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_harvest"/>
        <field name="implied_ids" eval="[(4, ref('group_harvest_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>